@{
    ViewData["Title"] = "Contact";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Get in Touch</h1>

    <p class="text-center">Feel free to contact me using the information or form below.</p>

    <div class="row mt-4">
        <div class="col-md-6">
            <h5><i class="fas fa-envelope text-primary me-2"></i>Email</h5>
            <p>zeynep@example.com</p>

            <h5><i class="fas fa-phone text-primary me-2"></i>Phone</h5>
            <p>+90 500 000 0000</p>

            <h5><i class="fab fa-linkedin text-primary me-2"></i>LinkedIn</h5>
            <p><a href="https://www.linkedin.com/example" target="_blank">linkedin.com/in/example</a></p>
        </div>

        <div class="col-md-6">
            <form>
                <div class="mb-3">
                    <label class="form-label">Your Name</label>
                    <input type="text" class="form-control" placeholder="Enter your name" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email Address</label>
                    <input type="email" class="form-control" placeholder="Enter your email" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Message</label>
                    <textarea class="form-control" rows="4" placeholder="Your message..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>
    </div>
</div>
