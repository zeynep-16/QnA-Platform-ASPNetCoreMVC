@{
    ViewData["Title"] = "Register";
}

<h2 class="text-center mt-4">Register</h2>

<form asp-action="Register" method="post" class="w-50 mx-auto mt-4">
    <div class="form-group mb-3">
        <label>Kullanıcı Adı</label>
        <input type="text" name="kullaniciAdi" class="form-control" required />
    </div>
    <div class="form-group mb-3">
        <label>Şifre</label>
        <input type="password" name="sifre" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success w-100">Kayıt Ol</button>
    <p class="mt-3 text-center">Zaten bir hesabınız var mı? <a asp-action="Login">Giriş Yap</a></p>
</form>
